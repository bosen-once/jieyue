<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.jieyue.common.mapper.SysAdminRoleMapper">

    <resultMap id="SysAccessRoleMap" type="com.example.jieyue.common.entity.SysAdminRole">
        <result column="id" jdbcType="INTEGER" property="id" />
        <result column="admin_id" jdbcType="INTEGER" property="adminId" />
        <result column="role_id" jdbcType="INTEGER" property="roleId" />
        <result column="status" jdbcType="INTEGER" property="status" />
    </resultMap>

    <select id="findAll" resultMap="SysAccessRoleMap">
        select * from sys_admin_role;
    </select>

    <select id="findByAdminId" resultMap="SysAccessRoleMap">
        select * from sys_admin_role where admin_id = #{adminId};
    </select>

    <insert id="insert">
        insert into sys_admin_role(id,admin_id,role_id,status) values(default,#{adminId},#{roleId},default);
    </insert>

    <delete id="deleteById">
        delete from sys_admin_role where id = #{id};
    </delete>

    <update id="updateStatus">
        update sys_admin_role set status = #{status} where id = #{id};
    </update>

    <delete id="deleteByAdminId">
        delete from sys_admin_role where admin_id = #{adminId};
    </delete>

    <delete id="deleteByRoleId">
        delete from sys_admin_role where role_id = #{roleId};
    </delete>

</mapper>